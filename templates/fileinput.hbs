<div class="component__inner mcq__inner" role="{{#if _isRadio}}radiogroup{{else}}group{{/if}}" {{#any displayTitle body instruction}}aria-labelledby="{{_id}}-header"{{/any}}>

  {{> component this}}

  <div class="component__widget mcq__widget{{#unless _isEnabled}} is-disabled{{#if _isInteractionComplete}} is-complete is-submitted show-user-answer{{#if _isCorrect}} is-correct{{/if}}{{/if}}{{/unless}}">

    {{#each _items}}
    <div class="mcq__item js-mcq-item item-{{@index}}{{#unless ../_isEnabled}}{{#if ../_canShowMarking}}{{#if _isCorrect}} is-correct{{else}} is-incorrect{{/if}}{{/if}}{{/unless}}">

      <input class="mcq__item-input js-item-input" type="file" id="{{../_id}}-{{@index}}-input" {{#if ../_isRadio}}name="{{../_id}}-item" {{/if}} type="file"{{#unless ../_isEnabled}} disabled{{/unless}} aria-label="{{{a11y_normalize text}}}" data-adapt-index="{{_index}}" />


        <div class="mcq__item-text">
          <div class="mcq__item-text-inner">
            {{{text}}}
          </div>
        </div>

      </label>

    </div>
    {{/each}}
    

  </div>
    <div id="feedbackAjv"></div>
    <div id="feedbackCsv"></div>
    {{!-- <div id="table"></div> --}}
    <table id="example" class="display" width="100%"></table>
  <div class="btn__container"></div>

</div>
